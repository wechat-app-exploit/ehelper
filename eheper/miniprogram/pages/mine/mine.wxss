/* pages/mine/mine.wxss */

.container {}

.userinfo {
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
  color: #353535;
  font-size: 30rpx;
  padding: 25rpx;
}

.userinfo image {
  width: 110rpx;
  height: 110rpx;
  display: inline-block;
}

.userinfo .infowrap {
  margin-left: 25rpx;
}

.userinfo .loginbut {
  font-size: 30rpx;
  width: 150rpx;
  height: 70rpx;
}

.userinfo .username {
  font-size: 35rpx;
}

.userinfo .usercode {
  color: #999;
  font-size: 26rpx;
  margin-top: 10rpx;
}

.list_contain {
  padding-left: 25rpx;
  padding-right: 25rpx;
  margin-top: 30rpx;
  background-color: #fff;
}

.list_contain .cell {
  background-color: #fff;
  color: #353535;
  font-size: 30rpx;
  padding: 35rpx 0;
  padding-left: 10rpx;
}

.list_contain .border_top {
  border-top: 1rpx solid #d9d9d9;
}
